<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="4dp"
    android:elevation="2dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_amount"
            android:textSize="@dimen/tv_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_medium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_amount_label"
            app:layout_constraintStart_toEndOf="@+id/tv_amount_label"
            app:layout_constraintTop_toTopOf="@+id/tv_amount_label"
            tool:text="$10" />

        <TextView
            android:id="@+id/tv_transaction_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_medium"
            app:layout_constraintStart_toStartOf="@+id/tv_amount_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount_label"
            android:text="@string/transaction_type" />

        <TextView
            android:id="@+id/tv_transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_medium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_transaction_type_label"
            app:layout_constraintStart_toEndOf="@+id/tv_transaction_type_label"
            app:layout_constraintTop_toTopOf="@+id/tv_transaction_type_label"
            tool:text="@string/transaction_deposit" />

        <TextView
            android:id="@+id/tv_transaction_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_medium"
            app:layout_constraintStart_toStartOf="@+id/tv_transaction_type_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_transaction_type_label"
            android:text="@string/transaction_date" />

        <TextView
            android:id="@+id/tv_transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_medium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_transaction_date_label"
            app:layout_constraintStart_toEndOf="@+id/tv_transaction_date_label"
            app:layout_constraintTop_toTopOf="@+id/tv_transaction_date_label"
            tool:text="12-12-2013" />

        <TextView
            android:id="@+id/tv_closing_balance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_medium"
            app:layout_constraintStart_toStartOf="@+id/tv_transaction_date_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_transaction_date_label"
            android:text="@string/closing_balance" />

        <TextView
            android:id="@+id/tv_closing_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_medium"
            app:layout_constraintBottom_toBottomOf="@+id/tv_closing_balance_label"
            app:layout_constraintStart_toEndOf="@+id/tv_closing_balance_label"
            app:layout_constraintTop_toTopOf="@+id/tv_closing_balance_label"
            tool:text="$100" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
